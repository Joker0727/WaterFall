<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" width="{{imgWidth}}px" height="{{imgHeight}}px" >
  <block wx:for="{{imgUrls}}" wx:key="{{id}}">
    <swiper-item>
      <image src="{{item.src}}" class="slide-image" width="{{imgWidth}}px" height="{{imgHeight}}px"/>
    </swiper-item>
  </block>
</swiper>