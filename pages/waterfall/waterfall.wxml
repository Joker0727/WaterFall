<view style="display:none">
  <image wx:for="{{images}}" wx:key="id" id="{{item.id}}" src="{{item.src}}" bindload="onImageLoad"></image>
</view>

<scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
  <view class = "content" style="width:100%">
    <view class="img_item left">
      <view wx:for="{{col1}}" wx:key="id">
         <template is="imageTemplate" data="{{item}}"></template>
      </view>
    </view>
    <view class="img_item right">
      <view wx:for="{{col2}}" wx:key="id">
       <template is="imageTemplate" data="{{item}}"></template>
      </view>
    </view>
  </view>
</scroll-view>

<template name="imageTemplate">
 <image src="{{item.src}}" data-src="{{item.src}}" style="width:100%;height:{{item.height}}px" bindtap='previewImage'></image>
</template>